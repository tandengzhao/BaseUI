<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar android:id="@+id/ViewToolbar_toolBar"
                                   xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_margin="0dp"
                                   style="@style/ui_ToolbarLayout"
                                   android:contentInsetEnd="1dp"
                                   android:contentInsetLeft="1dp"
                                   android:contentInsetRight="1dp"
                                   android:contentInsetStart="1dp"
                                   android:elevation="@dimen/ui_toolbarDivider"
                                   android:fitsSystemWindows="true"
                                   android:minHeight="@dimen/ui_toolbarMiniHeight"
                                   app:contentInsetEnd="1dp"
                                   app:contentInsetLeft="1dp"
                                   app:contentInsetRight="1dp"
                                   app:contentInsetStart="1dp"
                                   app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                                   app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                                   app:titleMargins="0dp">

    <TextView
        android:id="@+id/ViewToolbar_tvToolbarLeftBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="@dimen/ui_toolbarPaddingLeft"
        android:drawableLeft="@drawable/ic_arrow_back_white"
        android:drawablePadding="1dp"
        android:gravity="center_vertical"
        android:maxHeight="40dp"
        android:minHeight="40dp"
        android:minWidth="40dp"
        android:textColor="@color/ui_toolbarTextLeftBack"
        android:textSize="@dimen/ui_toolbarTextLeftBack"
        tools:text="返回"/>

    <TextView
        android:id="@+id/ViewToolbar_tvToolbarLeftOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:maxHeight="40dp"
        android:minHeight="40dp"
        android:minWidth="40dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:textColor="@color/ui_toolbarTextLeftOption"
        android:textSize="@dimen/ui_toolbarTextLeftOption"
        android:visibility="gone"
        tools:text="左侧"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/ViewToolbar_tvToolbarTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:maxHeight="40dp"
        android:maxLength="14"
        android:minHeight="40dp"
        android:minWidth="50dp"
        android:singleLine="true"
        android:textColor="@color/ui_toolbarTextCenter"
        android:textSize="@dimen/ui_toolbarTextCenter"
        android:textStyle="bold"
        tools:text="标题一二三四五六七八九十一二三四五六七八"/>
</android.support.v7.widget.Toolbar>
