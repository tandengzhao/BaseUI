<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar android:id="@+id/ViewToolbar_toolBar"
                                   xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_margin="0dp"
                                   android:background="@color/toolbar_background"
                                   android:contentInsetEnd="1dp"
                                   android:contentInsetLeft="1dp"
                                   android:contentInsetRight="1dp"
                                   android:contentInsetStart="1dp"
                                   android:elevation="1dp"
                                   android:fitsSystemWindows="true"
                                   android:minHeight="@dimen/toolbar_mini_height"
                                   app:contentInsetEnd="1dp"
                                   app:contentInsetLeft="1dp"
                                   app:contentInsetRight="1dp"
                                   app:contentInsetStart="1dp"
                                   app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                                   app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                                   app:titleMargins="0dp">

    <TextView
        android:id="@+id/ViewToolbar_tvToolbarLeftBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:drawablePadding="2dp"
        android:layout_marginLeft="5dp"
        android:drawableLeft="@drawable/ic_arrow_back_white"
        android:gravity="center_vertical"
        android:minHeight="48dp"
        android:textColor="@color/toolbar_left_back_text"
        android:textSize="@dimen/toolbar_left_back_text"
        tools:text=""/>

    <TextView
        android:id="@+id/ViewToolbar_tvToolbarLeftOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:minHeight="48dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:textColor="@color/toolbar_left_option_text"
        android:textSize="@dimen/toolbar_left_option_text"
        android:visibility="gone"
        tools:text="左侧"/>

    <TextView
        android:id="@+id/ViewToolbar_tvToolbarTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:maxLength="14"
        android:minHeight="48dp"
        android:minWidth="50dp"
        android:singleLine="true"
        android:textColor="@color/toolbar_title_text"
        android:textSize="@dimen/toolbar_title_text"
        android:textStyle="bold"
        tools:text="标题一二三四五六七八九十一二三四五六七八"/>
</android.support.v7.widget.Toolbar>
