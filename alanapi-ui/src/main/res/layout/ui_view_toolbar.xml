<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar android:id="@+id/ViewToolbar_toolBar"
                                   style="@style/ui_ToolbarLayout"
                                   xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_margin="0dp"
                                   android:contentInsetEnd="1dp"
                                   android:contentInsetLeft="1dp"
                                   android:contentInsetRight="1dp"
                                   android:contentInsetStart="1dp"
                                   android:elevation="@dimen/ui_elevation"
                                   android:fitsSystemWindows="true"
                                   android:minHeight="@dimen/ui_toolbarMiniHeight"
                                   app:contentInsetEnd="1dp"
                                   app:contentInsetLeft="1dp"
                                   app:contentInsetRight="1dp"
                                   app:contentInsetStart="1dp"
                                   app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                                   app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                                   app:titleMargins="0dp">

    <TextView
        android:id="@+id/ViewToolbar_tvToolbarLeftBack"
        style="@style/ui_ToolbarLeftBack"
        android:layout_marginLeft="@dimen/ui_toolbarPaddingLeft"
        tools:text=""/>

    <TextView
        android:id="@+id/ViewToolbar_tvToolbarLeftOption"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_gravity="left|center_vertical"
        android:gravity="center"
        android:minWidth="20dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:textColor="@color/ui_toolbarTextLeftOption"
        android:textSize="@dimen/ui_toolbarTextLeftOption"
        android:visibility="gone"
        tools:text="左侧"
        tools:visibility="visible"/>

    <LinearLayout
        android:id="@+id/ViewToolbar_llCenterLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/ui_toolbarTextTitleMarginLeft"
        android:layout_marginRight="@dimen/ui_toolbarTextTitleMarginRight"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ViewToolbar_tvToolbarTitle"
            style="@style/ui_ToolbarTitle"
            tools:text="标题"/>
    </LinearLayout>

</android.support.v7.widget.Toolbar>
