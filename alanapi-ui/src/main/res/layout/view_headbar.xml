<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/ViewHeadbar_rootLayout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="0dp"
              android:background="@color/toolbar_background"
              android:elevation="1dp"
              android:fitsSystemWindows="true"
              android:minHeight="@dimen/headbar_mini_height"
              app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
              app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ViewHeadbar_tvHeadbarLeftBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="left|center_vertical"
            android:drawableLeft="@drawable/ic_arrow_back_white"
            android:drawablePadding="2dp"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:textColor="@color/toolbar_left_back_text"
            android:textSize="@dimen/toolbar_left_back_text"
            tools:text=""/>

        <TextView
            android:id="@+id/ViewHeadbar_tvHeadbarLeftOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/ViewHeadbar_tvHeadbarLeftBack"
            android:gravity="center"
            android:minHeight="48dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textColor="@color/toolbar_left_option_text"
            android:textSize="@dimen/toolbar_left_option_text"
            android:visibility="gone"
            tools:text="左侧"/>

        <TextView
            android:id="@+id/ViewHeadbar_tvHeadbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:maxLength="14"
            android:minHeight="48dp"
            android:minWidth="50dp"
            android:singleLine="true"
            android:textColor="@color/toolbar_title_text"
            android:textSize="@dimen/toolbar_title_text"
            android:textStyle="bold"
            android:visibility="visible"
            tools:text="标题"/>

        <TextView
            android:id="@+id/ViewHeadbar_tvHeadbarRightOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="1dp"
            android:gravity="center"
            android:minHeight="48dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textColor="@color/toolbar_left_option_text"
            android:textSize="@dimen/toolbar_left_option_text"
            android:visibility="gone"
            tools:text="右侧"/>

        <TextView
            android:id="@+id/ViewHeadbar_tvHeadbarRightOption1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="1dp"
            android:layout_toLeftOf="@id/ViewHeadbar_tvHeadbarRightOption"
            android:gravity="center"
            android:minHeight="48dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textColor="@color/toolbar_left_option_text"
            android:textSize="@dimen/toolbar_left_option_text"
            android:visibility="gone"
            tools:text="右侧1"/>

        <TextView
            android:id="@+id/ViewHeadbar_tvHeadbarRightOption2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/ViewHeadbar_tvHeadbarRightOption1"
            android:gravity="center"
            android:minHeight="48dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textColor="@color/toolbar_left_option_text"
            android:textSize="@dimen/toolbar_left_option_text"
            android:visibility="gone"
            tools:text="右侧2"/>
    </RelativeLayout>
</LinearLayout>

