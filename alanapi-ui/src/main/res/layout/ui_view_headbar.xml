<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/ViewHeadbar_rootLayout"
              style="@style/ui_ToolbarLayout"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="0dp"
              android:elevation="@dimen/ui_elevation"
              android:fitsSystemWindows="true"
              android:minHeight="@dimen/ui_toolbarMiniHeight"
              android:orientation="vertical"
              app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
              app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/ui_toolbarMiniHeight"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/ui_toolbarPaddingLeft"
        android:paddingRight="@dimen/ui_toolbarPaddingRight">

        <TextView
            android:id="@+id/ViewHeadbar_tvHeadbarLeftBack"
            style="@style/ui_ToolbarLeftBack"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            tools:text=""/>

        <TextView
            android:id="@+id/ViewHeadbar_tvHeadbarLeftOption"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_gravity="left|center_vertical"
            android:layout_toRightOf="@id/ViewHeadbar_tvHeadbarLeftBack"
            android:gravity="center"
            android:minWidth="20dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textColor="@color/ui_toolbarTextLeftOption"
            android:textSize="@dimen/ui_toolbarTextLeftOption"
            android:visibility="gone"
            tools:text="左侧"
            tools:visibility="visible"/>

        <LinearLayout
            android:id="@+id/ViewHeadbar_llCenterLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ui_toolbarTextTitleMarginLeft"
            android:layout_marginRight="@dimen/ui_toolbarTextTitleMarginRight"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ViewHeadbar_tvHeadbarTitle"
                style="@style/ui_ToolbarTitle"
                android:visibility="visible"
                tools:text="标题"/>
        </LinearLayout>

        <TextView
            android:id="@+id/ViewHeadbar_tvHeadbarRightOption"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="1dp"
            android:gravity="center"
            android:minWidth="40dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textColor="@color/ui_toolbarTextRightOption"
            android:textSize="@dimen/ui_toolbarTextRightOption"
            android:visibility="gone"
            tools:text="右侧"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/ViewHeadbar_tvHeadbarRightOption1"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="1dp"
            android:layout_toLeftOf="@id/ViewHeadbar_tvHeadbarRightOption"
            android:gravity="center"
            android:minWidth="40dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textColor="@color/ui_toolbarTextRightOption"
            android:textSize="@dimen/ui_toolbarTextRightOption"
            android:visibility="gone"
            tools:text="右侧1"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/ViewHeadbar_tvHeadbarRightOption2"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/ViewHeadbar_tvHeadbarRightOption1"
            android:gravity="center"
            android:minWidth="40dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textColor="@color/ui_toolbarTextRightOption"
            android:textSize="@dimen/ui_toolbarTextRightOption"
            android:visibility="gone"
            tools:text="右侧2"
            tools:visibility="visible"/>
    </RelativeLayout>
</LinearLayout>

