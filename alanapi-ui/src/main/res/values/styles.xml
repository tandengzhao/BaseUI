<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/ui_toolbarBackgroundDark</item>
        <item name="colorPrimary">@color/ui_toolbarBackground</item>
        <item name="colorAccent">@color/ui_colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ui_Toolbar" >
        <item name="android:background">@color/ui_toolbarBackground</item>
    </style>
    <style name="ui_ToolbarActivity" parent="ui_Toolbar" >
    </style>
    <style name="ui_ToolbarLayout" parent="ui_Toolbar" >
    </style>
</resources>