<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/shapeBorderColorStroke"/>
                    <padding android:top="@dimen/shapeBorderLineHeight"/>
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="@color/shapeBorderColorStroke"/>
                    <padding android:bottom="@dimen/shapeBorderLineHeight"/>
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="@color/shapeBorderColorSolidPressed"/>
                    <padding android:bottom="0dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/shapeBorderColorStroke"/>
                    <padding android:top="@dimen/shapeBorderLineHeight"/>
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="@color/shapeBorderColorStroke"/>
                    <padding android:bottom="@dimen/shapeBorderLineHeight"/>
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="@color/shapeBorderColorSolidDefault"/>
                    <padding android:bottom="0dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>