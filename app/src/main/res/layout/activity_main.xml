<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_xn"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.alanapi.ui.demo.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <Button
            android:id="@+id/activityList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="普通ActivityLis列表"/>
        <Button
            android:id="@+id/activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="普通Activity"/>
        <Button
            android:id="@+id/activityFull"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="普通 全透明 Activity"/>
        <Button
            android:id="@+id/activityFull2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="普通 全透明 Activity"/>

        <Button
            android:id="@+id/fragmentActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="普通FragmentActivity"/>

        <Button
            android:id="@+id/appActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="普通AppCompatActivity"/>

        <Button
            android:id="@+id/drawerActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="普通DrawerLayoutActivity"/>

        <Button
            android:id="@+id/slidingPaneActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="普通SlidingPaneLayoutActivity"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onMainToolbar"
            android:text="MainToolbarActivity"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onMainHeadbar"
            android:text="MainHeadbarActivity"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onMainHeadbarAppCompat"
            android:text="MainHeadbarAppCompatActivity"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onLogin"
            android:text="登录"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageDrawableChange"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"/>


            <TextView
                android:id="@+id/tvDrawableBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:background="#00ff00"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ui_back_app"
                android:minHeight="48dp"
                android:minWidth="48dp"
                android:text="返回"/>
        </LinearLayout>


    </LinearLayout>


</ScrollView>
