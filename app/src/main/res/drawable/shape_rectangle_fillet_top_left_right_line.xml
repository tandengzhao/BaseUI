<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/shapeBorderFilletColorStroke"/>

                    <padding
                        android:bottom="@dimen/shapeBorderFilletLineHeight"
                        android:left="@dimen/shapeBorderFilletLineHeight"
                        android:right="@dimen/shapeBorderFilletLineHeight"
                        android:top="@dimen/shapeBorderFilletLineHeight"/>

                    <corners android:bottomLeftRadius="0dp"
                             android:bottomRightRadius="0dp"
                             android:topLeftRadius="@dimen/shapeRectangleFilletRadiusTopLeft"
                             android:topRightRadius="@dimen/shapeRectangleFilletRadiusTopRight"/>
                </shape>
            </item>
            <item >
                <shape android:shape="rectangle">
                    <solid android:color="@color/shapeRectangleFilletColorSolidTopLeftRightLineBottomPressed"/>

                    <corners android:bottomLeftRadius="0dp"
                             android:bottomRightRadius="0dp"
                             android:topLeftRadius="@dimen/shapeRectangleFilletRadiusTopLeft"
                             android:topRightRadius="@dimen/shapeRectangleFilletRadiusTopRight"/>
                </shape>

            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/shapeBorderFilletColorStroke"/>

                    <padding
                        android:bottom="@dimen/shapeBorderFilletLineHeight"
                        android:left="@dimen/shapeBorderFilletLineHeight"
                        android:right="@dimen/shapeBorderFilletLineHeight"
                        android:top="@dimen/shapeBorderFilletLineHeight"/>

                    <corners android:bottomLeftRadius="0dp"
                             android:bottomRightRadius="0dp"
                             android:topLeftRadius="@dimen/shapeRectangleFilletRadiusTopLeft"
                             android:topRightRadius="@dimen/shapeRectangleFilletRadiusTopRight"/>
                </shape>
            </item>

            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/shapeRectangleFilletColorSolidTopLeftRightLineBottomDefault"/>

                    <corners android:bottomLeftRadius="0dp"
                             android:bottomRightRadius="0dp"
                             android:topLeftRadius="@dimen/shapeRectangleFilletRadiusTopLeft"
                             android:topRightRadius="@dimen/shapeRectangleFilletRadiusTopRight"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>